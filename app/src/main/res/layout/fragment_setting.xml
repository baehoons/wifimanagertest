<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".SettingFragment">

        <!-- TODO: Update blank fragment layout -->
        <RelativeLayout
            android:id="@+id/relative_setting_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="70dp"
            android:padding="10dp"
            android:background="@color/exersior_green2">

            <ImageView
                android:id="@+id/img_setting_account"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_account_circle_black_24dp" />

            <TextView
                android:id="@+id/tv_setting_account"
                android:layout_toEndOf="@id/img_setting_account"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="계정"
                android:textSize="20sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/exersior_dark"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_setting_account_small"
                android:layout_below="@id/tv_setting_account"
                android:layout_toRightOf="@id/img_setting_account"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사용자 계정을 확인 및 수정이 가능합니다."
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/exersior_dark_blue"
                android:textStyle="normal"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_setting_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:padding="10dp"
            android:background="@color/exersior_green2">

            <ImageView
                android:id="@+id/img_setting_notification"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_notifications_black_24dp" />

            <TextView
                android:id="@+id/tv_setting_notification"
                android:layout_toEndOf="@id/img_setting_notification"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="알림 설정"
                android:textSize="20sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/exersior_dark"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_setting_notification_small"
                android:layout_below="@id/tv_setting_notification"
                android:layout_toRightOf="@id/img_setting_notification"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="푸쉬알림 설정 확인 및 변경이 가능합니다."
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/exersior_dark_blue"
                android:textStyle="normal"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_setting_normalnotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:padding="10dp"
            android:background="@color/exersior_green2">

            <ImageView
                android:id="@+id/img_setting_normalnotification"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_settings_black_24dp" />

            <TextView
                android:id="@+id/tv_setting_normalnotification"
                android:layout_toEndOf="@+id/img_setting_normalnotification"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일반 설정"
                android:textSize="20sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/exersior_dark"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_setting_normalnotification_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_setting_normalnotification"
                android:layout_marginStart="15dp"
                android:layout_toRightOf="@+id/img_setting_normalnotification"
                android:text="기본설정 확인 및 수정이 가능합니다."
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/exersior_dark_blue"
                android:textStyle="normal" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_setting_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:padding="10dp"
            android:background="@color/exersior_green2">

            <ImageView
                android:id="@+id/img_setting_question"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_help_black_24dp" />

            <TextView
                android:id="@+id/tv_setting_question"
                android:layout_toEndOf="@+id/img_setting_question"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="문의하기"
                android:textSize="20sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/exersior_dark"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_setting_question_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_setting_question"
                android:layout_marginStart="15dp"
                android:layout_toRightOf="@+id/img_setting_question"
                android:text="궁금한점이 있으면 문의해주시기 바랍니다."
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/exersior_dark_blue"
                android:textStyle="normal" />

        </RelativeLayout>

    </LinearLayout>
</layout>